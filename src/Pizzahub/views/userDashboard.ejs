<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <script defer src="/js/theme.js"></script>
  <title>User Dashboard | PizzaHub</title>
</head>
<body>
  <header>
    <h2>Welcome, <%= user.name %> ğŸ‘‹</h2>
    <a href="/logout">Logout</a>
    <button id="themeToggle" class="toggle-mode">ğŸŒ— Toggle Mode</button>
    <a href="/user/history">ğŸ“„ View Order History</a>

    <form action="/user/search" method="GET">
      <input type="text" name="q" placeholder="Search pizzas..." required>
      <button type="submit">ğŸ”</button>
    </form>
  </header>

  <main class="pizza-list">
    <h3>Available Pizzas</h3>
    <% pizzas.forEach(pizza => { %>
        <div class="pizza-card">
          <img src="/uploads/<%= pizza.image %>" alt="<%= pizza.name %>" width="150">
          <h3><%= pizza.name %></h3>
          <p>â‚±<%= pizza.price %></p>
          <form method="POST" action="/user/order">
            <input type="hidden" name="pizza_id" value="<%= pizza.id %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit">Order</button>
          </form>
        </div>
      <% }) %>
  </main>
</body>
</html>

<!-- views/partials/head.ejs -->

<% if (locals.message) { %>
    <div class="toast"><%= message %></div>
    <script>
      setTimeout(() => {
        document.querySelector('.toast').remove();
      }, 3000);
    </script>
  <% } %>
